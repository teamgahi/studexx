<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:clipToPadding="false"
    android:outlineProvider="bounds"
    android:padding="5dp" xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Job Fragment"
        android:id="@+id/textView"
        android:layout_gravity="center"
        />


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="left|top"
        android:layout_width="150dp"
        android:layout_height="150dp"
        card_view:cardBackgroundColor="@color/colorE"
        card_view:cardElevation="50dp"
        card_view:cardCornerRadius="4dp">


        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="GDG DevFest Cebu 2016"
            android:textSize="24dp"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:textColor="@color/textWhite" />

        <TextView
            android:id="@+id/info_text10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SM Seaside 7:00AM-6:00PM"
            android:textSize="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:textColor="@color/textWhite"/>



    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_gravity="right|top"
        android:layout_width="150dp"
        android:layout_height="150dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/colorSM"
        >

        <TextView
            android:id="@+id/info_text13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Student Programmers Meetup"
            android:textSize="24dp"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:textColor="@color/textWhite" />

        <TextView
            android:id="@+id/info_text12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="The TIDE 5:00PM-6:00PM"
            android:textSize="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:textColor="@color/textWhite"/>


    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view3"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/colorSM"
        >

        <TextView
            android:id="@+id/info_text14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ComOrg Tutorial"
            android:textSize="24dp"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:textColor="@color/textWhite" />

        <TextView
            android:id="@+id/info_text15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="The TIDE 5:00PM-6:00PM"
            android:textSize="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:textColor="@color/textWhite"/>


    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIEW IN MAP"
        android:id="@+id/mapBi"
        android:layout_gravity="center_horizontal|bottom"
        android:backgroundTint="@color/abc_input_method_navigation_guard"
        android:textColor="@color/abc_primary_text_disable_only_material_dark" />
</FrameLayout>