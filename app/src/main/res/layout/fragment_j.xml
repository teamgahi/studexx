<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="left|top"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardBackgroundColor="@color/colorJ"
        card_view:cardCornerRadius="4dp" >

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Newswriting"
            android:textSize="24dp"
            android:layout_marginTop="16sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:textColor="@color/textWhite" />

        <TextView
            android:id="@+id/info_text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Issues that are currently being talked about in the country. Specifically, Marcos's burial in the Libingan ng mga Bayani"
            android:textSize="14dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:textColor="@color/textWhite"/>

        <TextView
            android:id="@+id/info_text3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Contact Mamu - 0933960453"
            android:textSize="12dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:textColor="@color/textWhite"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardBackgroundColor="@color/colorJ"
        card_view:cardCornerRadius="4dp" >

        <TextView
            android:id="@+id/info_text4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Grocery and School Shopping"
            android:textSize="24dp"
            android:layout_marginTop="16sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:textColor="@color/textWhite" />

        <TextView
            android:id="@+id/info_text5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="I am in need of someone who will do grocery and school shopping for me. I will be paying. Please Contact Me. "
            android:textSize="14dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:textColor="@color/textWhite"/>

        <TextView
            android:id="@+id/info_text6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Contact Ary - 09223817190"
            android:textSize="12dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:textColor="@color/textWhite"/>

    </android.support.v7.widget.CardView>



</FrameLayout>